        "./src/app/pages/NotFound.tsx",
        "./.next/types/routes.d.ts",
        "./.next/types/validator.ts"
    ],
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts",
        "tailwind.config.js"
    ],
    "exclude": [
        "node_modules"
    ]
}
